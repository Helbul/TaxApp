<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newtransaction.NewTransactionFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner_type_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:entries="@array/type_transaction"
            android:fontFamily="@font/montserrat"
            android:hint="Валюта"
            android:inputType="text"
            android:minHeight="48dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editDateTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Дата транзакции"
            android:inputType="date"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/montserrat"
            android:hint="Сумма"
            android:inputType="number"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_currencies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:entries="@array/currencies"
            android:fontFamily="@font/montserrat"
            android:hint="Валюта"
            android:inputType="text"
            android:minHeight="48dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_new_transaction_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/buttonAdd" />

        <Button
            android:id="@+id/button_new_transacrion_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonCancel" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>