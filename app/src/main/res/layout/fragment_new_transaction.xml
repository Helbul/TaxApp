<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newtransaction.NewTransactionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner_type_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:entries="@array/type_transaction"
            android:fontFamily="@font/montserrat"
            android:minHeight="48dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editDateTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/editNewTransDate"
            android:layout_marginBottom="15dp"
            android:inputType="date"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/editNewTransSum"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spinner_currencies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:entries="@array/currencies"
            android:minHeight="48dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_new_transaction_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonNewTransAdd"
            android:background="@drawable/button_ok"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/button_new_transaction_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_cancel"
            android:text="@string/buttonNewTransCancel" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>