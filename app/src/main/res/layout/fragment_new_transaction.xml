<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTransactionFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--
        <EditText
            android:id="@+id/editIdTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Id"
            android:inputType="textPersonName"
            android:textSize="14sp" />
        -->

        <EditText
            android:id="@+id/editTypeTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Тип операции"
            android:inputType="text"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editDateTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Дата транзакции"
            android:inputType="date"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/montserrat"
            android:hint="Сумма"
            android:inputType="number"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editValuta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/montserrat"
            android:hint="Валюта"
            android:inputType="text"
            android:textSize="14sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>